{
  "name": "@wisdomos/database",
  "version": "1.0.0",
  "description": "WisdomOS Database package with Prisma ORM",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "build": "prisma generate && tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:demo": "DATABASE_SEED_DEMO=true tsx prisma/seed.ts",
    "db:seed:advanced": "tsx ../../../scripts/seed-demo-data.ts",
    "db:seed:full": "DATABASE_SEED_DEMO=true tsx prisma/seed.ts && tsx ../../../scripts/seed-demo-data.ts",
    "db:reset": "prisma migrate reset",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@wisdomos/types": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "dotenv": "^16.0.0",
    "jest": "^29.5.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}