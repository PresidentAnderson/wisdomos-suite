{
  "name": "wisdomos",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:push": "pnpm --filter @wisdomos/db prisma db push",
    "db:studio": "pnpm --filter @wisdomos/db prisma studio",
    "db:generate": "pnpm --filter @wisdomos/db prisma generate",
    "db:migrate": "pnpm --filter @wisdomos/db prisma migrate dev",
    "db:seed": "pnpm --filter @wisdomos/db prisma db seed",
    "mobile:dev": "pnpm --filter @wisdomos/mobile expo start",
    "mobile:ios": "pnpm --filter @wisdomos/mobile expo run:ios",
    "mobile:android": "pnpm --filter @wisdomos/mobile expo run:android",
    "web:dev": "pnpm --filter @wisdomos/web dev",
    "api:dev": "pnpm --filter @wisdomos/api dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "^2.0.6",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "typescript": "^5.4.0"
  }
}