{
  "$comment": "WisdomOS Phoenix - Vercel Configuration | AXAI Innovations - Proprietary",
  "framework": "nextjs",
  "buildCommand": "cd ../.. && npm install && cd apps/web && npx prisma generate && npm run build",
  "installCommand": "cd ../.. && npm install",
  "regions": ["iad1", "sfo1"],
  "functions": {
    "app/**/*.{ts,js}": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_BUILD_PLATFORM": "vercel",
    "NEXT_PUBLIC_PHOENIX_MODE": "production",
    "NEXT_PUBLIC_APP_DOMAIN": "wisdomos-phoenix.vercel.app",
    "NEXT_PUBLIC_API_BASE": "https://wisdomos-phoenix.vercel.app/api",
    "NEXTAUTH_URL": "https://wisdomos-phoenix.vercel.app",
    "NEXTAUTH_SECRET": "@phoenix-auth-secret",
    "NEXT_PUBLIC_VERCEL_ANALYTICS_ID": "@vercel-analytics-id"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-WisdomOS-Phoenix",
          "value": "Active"
        },
        {
          "key": "X-AXAI-Innovations",
          "value": "Proprietary - All Rights Reserved"
        },
        {
          "key": "X-Phoenix-Version",
          "value": "2.0.0"
        },
        {
          "key": "X-Powered-By",
          "value": "WisdomOS Phoenix - AXAI Innovations"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://vercel.live https://www.googletagmanager.com https://vitals.vercel-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; connect-src 'self' https: wss: https://*.supabase.co https://vitals.vercel-analytics.com; font-src 'self' data: https://fonts.gstatic.com; media-src 'self' data:; object-src 'none';"
        },
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow, noarchive, nosnippet"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-WisdomOS-API",
          "value": "Phoenix-v2"
        },
        {
          "key": "X-AXAI-Innovations",
          "value": "Proprietary"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://wisdomos-phoenix.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Phoenix-Asset",
          "value": "Static"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/.env(.*)",
      "destination": "/404",
      "permanent": false,
      "statusCode": 404
    },
    {
      "source": "/.git(.*)",
      "destination": "/404", 
      "permanent": false,
      "statusCode": 404
    },
    {
      "source": "/wp-(.*)",
      "destination": "/404",
      "permanent": false,
      "statusCode": 404
    },
    {
      "source": "/admin.php",
      "destination": "/404",
      "permanent": false,
      "statusCode": 404
    }
  ],
  "rewrites": [
    {
      "source": "/phoenix-health",
      "destination": "/api/health"
    }
  ],
  "crons": [
    {
      "path": "/api/phoenix-heartbeat",
      "schedule": "0 */6 * * *"
    }
  ]
}
