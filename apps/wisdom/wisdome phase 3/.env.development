# Development Environment Variables for WisdomOS Multi-Tenancy

# Database Configuration
DATABASE_URL="file:./dev.db"
# For PostgreSQL: DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wisdomos

# Multi-Tenancy Configuration
NEXT_PUBLIC_APP_DOMAIN=localhost:3000
NEXT_PUBLIC_API_BASE=http://localhost:4000

# Authentication & Security  
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-secret-key-minimum-32-characters-long
JWT_SECRET=dev-jwt-secret-minimum-32-characters-long

# Stripe Integration (test mode)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_test_webhook_secret

# Email Configuration (development - use Mailtrap or similar)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-username
SMTP_PASS=your-mailtrap-password
FROM_EMAIL=dev@wisdomos.local

# AI Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key

# Analytics (development)
NEXT_PUBLIC_GA4_ID=G-DEV-XXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-DEV-XXXX

# Feature Flags
ENABLE_CUSTOM_DOMAINS=false
ENABLE_SSO=false
ENABLE_AUDIT_LOGS=true

# Development specific
NODE_ENV=development
LOG_LEVEL=debug