# ==============================================
# WISDOMOS PHASE 3 - ENVIRONMENT CONFIGURATION
# ==============================================

# Copy this file to .env.local and fill in your values

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/wisdomos
REDIS_URL=redis://localhost:6379

# ==============================================
# ENCRYPTION & SECURITY
# ==============================================
MASTER_ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ==============================================
# API CONFIGURATION
# ==============================================
API_URL=http://localhost:3001
COMMUNITY_URL=http://localhost:3002
WEB_URL=http://localhost:3000

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Vercel
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_web_project_id
VERCEL_COMMUNITY_PROJECT_ID=your_community_project_id

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your_github_username
DOCKER_TOKEN=your_github_token

# Server Deployment
PROD_HOST=your.production.server
PROD_USER=deploy
PROD_SSH_KEY=your_ssh_private_key

STAGING_HOST=your.staging.server
STAGING_USER=deploy
STAGING_SSH_KEY=your_staging_ssh_key

# ==============================================
# ANALYTICS CONFIGURATION
# ==============================================
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_FB_PIXEL_ID=your_facebook_pixel_id
NEXT_PUBLIC_CLARITY_ID=your_microsoft_clarity_id

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@wisdomos.com

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=wisdomos

# Stripe (Payments)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI (AI Features)
OPENAI_API_KEY=sk-your_openai_api_key

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOGFLARE_API_KEY=your_logflare_api_key
LOGFLARE_SOURCE_TOKEN=your_source_token

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_REGISTRATION=true
ENABLE_LEGACY_VAULT=true
ENABLE_COMMUNITY_HUB=true
ENABLE_GAMIFICATION=true
ENABLE_AI_FEATURES=false

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_SOURCE_MAPS=true

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# These will override the above in production

# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_SOURCE_MAPS=false
# NEXT_PUBLIC_API_URL=https://api.wisdomos.com
# NEXT_PUBLIC_COMMUNITY_URL=https://community.wisdomos.com