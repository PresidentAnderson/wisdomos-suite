# Production Environment Configuration for WisdomOS
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration (Required for production)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database URL for Supabase (for Prisma if using both)
DATABASE_URL=postgresql://postgres.[YOUR_PROJECT_REF]:[YOUR_PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=https://wisdomos-phoenix.netlify.app
NEXT_PUBLIC_API_BASE=https://wisdomos-phoenix.netlify.app/api
NEXTAUTH_URL=https://wisdomos-phoenix.netlify.app
NEXTAUTH_SECRET=your-32-character-secret-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-minimum-32-chars
JWT_EXPIRES_IN=7d

# Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=prj_your_project_id
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=wisdomos-phoenix.netlify.app

# Phoenix Theme Configuration
NEXT_PUBLIC_THEME=phoenix
NEXT_PUBLIC_BRAND_NAME=WisdomOS Phoenix
NEXT_PUBLIC_COMPANY_NAME=AXAI Innovations

# Security Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: Third-party integrations
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...