{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": { 
      "cache": false, 
      "persistent": true 
    },
    "build": { 
      "cache": true, 
      "dependsOn": ["^build"], 
      "outputs": ["dist/**", ".next/**", "build/**"] 
    },
    "lint": { 
      "cache": true 
    },
    "test": { 
      "cache": true 
    }
  }
}