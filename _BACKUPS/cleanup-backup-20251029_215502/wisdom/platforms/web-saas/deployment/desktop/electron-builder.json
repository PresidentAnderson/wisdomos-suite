{
  "appId": "com.axaiinnovations.wisdomos",
  "productName": "WisdomOS",
  "directories": {
    "output": "dist",
    "app": "src",
    "buildResources": "assets"
  },
  "files": [
    "build/**/*",
    "node_modules/**/*",
    "src/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "build/main.js",
    "homepage": "https://wisdomos.com"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "icon": "assets/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "darkModeSupport": true,
    "type": "distribution",
    "publish": {
      "provider": "github",
      "owner": "presidentanderson",
      "repo": "wisdomos-desktop"
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "assets/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "sign": "scripts/sign-windows.js",
    "publish": {
      "provider": "github",
      "owner": "presidentanderson", 
      "repo": "wisdomos-desktop"
    }
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "rpm",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office",
    "publish": {
      "provider": "github",
      "owner": "presidentanderson",
      "repo": "wisdomos-desktop"
    }
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "WisdomOS",
    "installerIcon": "assets/installer.ico",
    "uninstallerIcon": "assets/uninstaller.ico",
    "installerHeaderIcon": "assets/installer-header.ico",
    "license": "LICENSE-PRIVATE"
  },
  "dmg": {
    "background": "assets/dmg-background.png",
    "iconSize": 100,
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "protocols": [
    {
      "name": "WisdomOS Protocol",
      "schemes": ["wisdomos"]
    }
  ],
  "afterSign": "scripts/notarize.js",
  "beforeBuild": "scripts/before-build.js",
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "compression": "maximum",
  "releaseInfo": {
    "releaseNotes": "Phoenix rises with enhanced transformation features! ðŸ”¥",
    "releaseName": "Phoenix Rising v${version}",
    "releaseDate": "${env.RELEASE_DATE}"
  },
  "buildDependenciesFromSource": true,
  "nodeGypRebuild": false,
  "npmRebuild": true
}