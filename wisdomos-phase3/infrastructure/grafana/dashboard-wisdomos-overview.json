{
  "dashboard": {
    "title": "WisdomOS - Platform Overview",
    "uid": "wisdomos-overview",
    "tags": ["wisdomos", "overview", "platform"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "timeseries",
        "title": "API Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "timeseries",
        "title": "API Response Time (P50, P95, P99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "type": "stat",
        "title": "Active Users (24h)",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT COUNT(DISTINCT user_id) as active_users FROM journal_entries WHERE created_at > NOW() - INTERVAL '24 hours'",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "type": "stat",
        "title": "Journal Entries Today",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT COUNT(*) as entries_today FROM journal_entries WHERE created_at::date = CURRENT_DATE",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "type": "gauge",
        "title": "Average Fulfillment Score",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT AVG(metric) as avg_score FROM fd_dimension_metrics WHERE updated_at > NOW() - INTERVAL '24 hours'",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 5,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 2, "color": "yellow"},
                {"value": 3, "color": "green"},
                {"value": 4, "color": "blue"}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "type": "stat",
        "title": "Active Commitments",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT COUNT(*) as active_commitments FROM commitments WHERE status = 'active'",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 16},
        "type": "bargauge",
        "title": "Fulfillment Scores by Life Area",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT la.label_en as area, AVG(dm.metric) as avg_score FROM fd_dimension_metrics dm JOIN fd_dimensions d ON dm.dimension_id = d.id JOIN fd_subdomains sd ON d.subdomain_id = sd.id JOIN fd_life_areas la ON sd.life_area_id = la.id WHERE dm.updated_at > NOW() - INTERVAL '7 days' GROUP BY la.label_en ORDER BY avg_score DESC",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 5,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 2.5, "color": "yellow"},
                {"value": 3.5, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 16},
        "type": "timeseries",
        "title": "Fulfillment Score Trend (7 Days)",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT date_trunc('day', updated_at) as time, AVG(metric) as avg_score FROM fd_dimension_metrics WHERE updated_at > NOW() - INTERVAL '7 days' GROUP BY time ORDER BY time",
            "refId": "A",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 5,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "pointSize": 5
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 26},
        "type": "timeseries",
        "title": "Database Connections",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT NOW() as time, COUNT(*) as connections FROM pg_stat_activity WHERE state = 'active'",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 26},
        "type": "timeseries",
        "title": "Agent Job Queue Length",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT NOW() as time, status, COUNT(*) as count FROM jobs WHERE created_at > NOW() - INTERVAL '1 hour' GROUP BY status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 100
            }
          }
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 26},
        "type": "piechart",
        "title": "Job Status Distribution",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT status, COUNT(*) as count FROM jobs WHERE created_at > NOW() - INTERVAL '24 hours' GROUP BY status",
            "refId": "A",
            "format": "table"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right"
          },
          "pieType": "donut"
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 34},
        "type": "table",
        "title": "Recent Errors",
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT timestamp, level, message, details FROM logs WHERE level = 'error' AND timestamp > NOW() - INTERVAL '1 hour' ORDER BY timestamp DESC LIMIT 50",
            "refId": "A",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "timestamp", "desc": true}]
        }
      }
    ]
  }
}
